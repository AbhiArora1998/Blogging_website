<%-include('partials/header')-%>
<h1>Compose</h1>
<form action="/compose" method="post" style="width: 100%;">
  
    <label for="Title">Title</label>
    
    <div id="Title" class="form-group mb-3 ">
      <input
        type="text"
        class="form-control"
        placeholder="Title"
        aria-label="Username"
        aria-describedby="basic-addon1"
        name="userInput"
      />
    </div>

   
    <label for="body">Body</label>
    
    <div id="body" class="form-group " >
      <textarea
        class="form-control "
        name="composeBody"
        aria-label="With textarea"
        rows="5"
      ></textarea>
    </div>

    
    <button type="submit" class="btn btn-primary">Publish</button>
 
</form>

<%-include('partials/footer')-%>
